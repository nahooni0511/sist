<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10151D"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/back_to_home" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/ai_box_ip_hint"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="#6EC0FF"
            app:hintTextColor="#9ED7FF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aiBoxIpEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:text="10.0.2.2"
                android:textColor="#FFFFFF"
                android:textColorHint="#88FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/connect" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/sportRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/squatRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/sport_squat"
            android:textColor="#D6EAFF" />

        <RadioButton
            android:id="@+id/longJumpRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/sport_long_jump"
            android:textColor="#D6EAFF" />
    </RadioGroup>

    <TextView
        android:id="@+id/selectedSportTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="#A6C9E6"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startMeasureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_measure" />

        <Button
            android:id="@+id/stopMeasureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/stop_measure" />
    </LinearLayout>

    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/status_waiting"
        android:textColor="#D6EAFF"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/activeEndpointTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/active_endpoint_empty"
        android:textColor="#94B8D6"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1A222F"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport_squat"
                android:textColor="#DFF0FF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/squatCountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="횟수: -"
                android:textColor="#9CFFBA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/squatStateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="상태: -"
                android:textColor="#D6EAFF"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="#1A222F"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sport_long_jump"
                android:textColor="#DFF0FF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/longJumpDistanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="거리: -"
                android:textColor="#FFD89E"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/longJumpFlagsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="상태: -"
                android:textColor="#D6EAFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/raw_message"
        android:textColor="#A6C9E6"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rawMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0D1219"
        android:padding="8dp"
        android:text="-"
        android:textColor="#9BB5CC"
        android:textSize="11sp" />

</LinearLayout>
