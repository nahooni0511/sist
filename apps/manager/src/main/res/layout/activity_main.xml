<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1220"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/marketTabButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/tab_marketplace" />

        <Button
            android:id="@+id/settingsTabButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="@string/tab_settings" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/marketPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/refreshMarketButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sync_market" />

            <Button
                android:id="@+id/checkAutoUpdateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="@string/run_auto_update" />
        </LinearLayout>

        <TextView
            android:id="@+id/marketStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#A3B5D1"
            android:textSize="14sp"
            tools:text="마켓 불러오는 중" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/marketRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/settingsPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/server_url"
                android:textColor="#C3D4EE" />

            <EditText
                android:id="@+id/serverUrlInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:autofillHints=""
                android:background="@android:drawable/edit_text"
                android:inputType="textUri"
                android:textColor="#ECF2FF"
                android:textColorHint="#5F769B"
                tools:text="http://192.168.0.20:4000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/device_id"
                android:textColor="#C3D4EE" />

            <EditText
                android:id="@+id/deviceIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:inputType="text"
                android:textColor="#ECF2FF"
                android:textColorHint="#5F769B" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/ai_box_ip"
                android:textColor="#C3D4EE" />

            <EditText
                android:id="@+id/aiBoxIpInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:inputType="textUri"
                android:textColor="#ECF2FF"
                android:textColorHint="#5F769B"
                tools:text="192.168.0.50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/extra_settings"
                android:textColor="#C3D4EE" />

            <EditText
                android:id="@+id/extraSettingsInput"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="6dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:textColor="#ECF2FF"
                android:textColorHint="#5F769B"
                tools:text="EXAMPLE_KEY=value" />

            <Switch
                android:id="@+id/autoUpdateSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/auto_update_switch"
                android:textColor="#ECF2FF" />

            <Button
                android:id="@+id/checkDoStatusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/check_do_status" />

            <Button
                android:id="@+id/applyDoPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/apply_do_policy" />

            <Button
                android:id="@+id/openSystemSettingsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/open_system_settings" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveSettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/save_settings" />

                <Button
                    android:id="@+id/syncSettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="@string/sync_settings" />
            </LinearLayout>

            <TextView
                android:id="@+id/settingsStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#A3B5D1"
                android:textSize="14sp"
                tools:text="설정이 저장되었습니다." />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
