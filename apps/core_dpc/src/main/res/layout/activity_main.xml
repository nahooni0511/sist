<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1220">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistrun Core DPC"
            android:textColor="#EAF2FF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#D0E2FF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/doReasonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#9FB4D4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/accessibilityStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="#CDE1FF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/accessibilityWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/accessibility_required_warning"
            android:textColor="#FF6B6B"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/openAccessibilitySettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/open_accessibility_settings" />

        <TextView
            android:id="@+id/idleStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="#9FB4D4"
            android:textSize="13sp" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/refresh_status" />

        <Button
            android:id="@+id/applyPolicyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/apply_policy" />

        <Button
            android:id="@+id/heartbeatTestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/heartbeat_test"
            android:visibility="gone" />

        <Button
            android:id="@+id/forceTimeoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/force_timeout"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
